# =======================================================================
# SolariHub Backend Environment Configuration
# Copy this file to .env and fill in your values
# =======================================================================

# --------------------------------------
# Application Configuration
# --------------------------------------
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# --------------------------------------
# Database Configuration
# --------------------------------------

# PostgreSQL (Primary Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=solarihub_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# MongoDB (Document Store)
MONGODB_URI=mongodb://localhost:27017/solarihub_dev

# Redis (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# --------------------------------------
# JWT & Security Configuration
# --------------------------------------

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Password Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------
# External Services
# --------------------------------------

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (for password reset, notifications)
FROM_EMAIL=no-reply@solarihub.net

# --------------------------------------
# Logging Configuration
# --------------------------------------
LOG_LEVEL=info
LOG_FILE=logs/app.log

# --------------------------------------
# Development Settings
# --------------------------------------

# Database seeding and reset (development only)
DEV_SEED_DATA=false
DEV_RESET_DB=false

# --------------------------------------
# Production Settings (Comment out in development)
# --------------------------------------

# SSL/TLS
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Database URLs for production (use connection strings)
# DATABASE_URL=postgresql://user:password@host:port/database
# MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/database
# REDIS_URL=redis://user:password@host:port

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# --------------------------------------
# Feature Flags
# --------------------------------------
ENABLE_SWAGGER_DOCS=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECKS=true

# --------------------------------------
# Cloud Services (Phase 1+)
# --------------------------------------

# AWS (for file uploads, storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=solarihub-uploads

# Payment Services (Stripe, PayPal)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Blockchain Services (Web3, Infura)
# INFURA_PROJECT_ID=your_infura_project_id
# PRIVATE_KEY=your_ethereum_private_key
# CONTRACT_ADDRESS=your_smart_contract_address

# IoT & Time Series (InfluxDB, MQTT)
# INFLUXDB_URL=http://localhost:8086
# INFLUXDB_TOKEN=your_influxdb_token
# INFLUXDB_ORG=solarihub
# INFLUXDB_BUCKET=energy_data
# MQTT_BROKER_URL=mqtt://localhost:1883

# Search Engine (Elasticsearch)
# ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_USERNAME=elastic
# ELASTICSEARCH_PASSWORD=your_elastic_password

# =======================================================================
# IMPORTANT SECURITY NOTES:
# =======================================================================
# 1. NEVER commit .env files to version control
# 2. Use strong, unique passwords for all services
# 3. Change JWT_SECRET to a secure random string (32+ characters)
# 4. Use environment-specific configurations
# 5. Rotate secrets regularly in production
# 6. Use secrets management services in production (AWS Secrets Manager, Azure Key Vault, etc.)
# ======================================================================= 