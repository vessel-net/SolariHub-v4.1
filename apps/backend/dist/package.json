{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@nx/js": "21.2.0",
    "@nx/node": "21.1.3",
    "@nx/webpack": "21.1.3",
    "@types/express": "4.17.23",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "redis": "^4.7.1",
    "tslib": "2.8.1",
    "typescript": "5.7.2",
    "uuid": "^9.0.1",
    "webpack-cli": "5.1.4",
    "winston": "^3.17.0"
  },
  "scripts": {
    "build": "nx build backend --prod",
    "extract-deps": "node extract-runtime-deps.js",
    "build:render": "npm run build && npm run extract-deps",
    "start": "node dist/main.js"
  },
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "backend:build:development"
          },
          "production": {
            "buildTarget": "backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "main": "main.js"
}