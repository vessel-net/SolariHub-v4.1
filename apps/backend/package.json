{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@nx/webpack": "^21.1.3",
    "@nx/node": "^21.1.3",
    "@nx/js": "^21.1.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.0",
    "typescript": "~5.7.2",
    "webpack-cli": "^5.1.4"
  },
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "backend:build:development"
          },
          "production": {
            "buildTarget": "backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
